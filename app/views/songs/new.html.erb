<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
    <%= f.text_field :title %>
  <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>
  <%= f.label :genre_id %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br />
  <textarea name="song[note_content][]" id="song_notes_1"></textarea>
  <textarea name="song[note_content][]" id="song_notes_2"></textarea>

  <%= f.submit %>
<% end %>


